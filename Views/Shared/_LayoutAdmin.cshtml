
@{
    var hoten = Context.Session.GetString("HoTenNv") ?? "Người dùng";
    var email = Context.Session.GetString("Email") ?? "";
    var role = Context.Session.GetString("Role") ?? "";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Admin Du Lịch</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="~/Admin/css/style_admin.css" rel="stylesheet">
</head>
<body>
    <!-- SIDEBAR -->
    <div class="sidebar">
        <h2>Tour Du Lịch</h2>
        <a href="#">🏠 Dashboard</a>
        <a asp-controller="Admin" asp-action="ListDanhMucTour">📁 Quản lý Danh Mục</a>
        <a asp-controller="Admin" asp-action="ListTour">🧭 Quản lý Tour</a>
        <a asp-controller="Admin" asp-action="ListKH">👤 Quản lý Khách hàng</a>
        <a href="#">📄 Đơn đặt Tour</a>
        <a href="#">📌 Địa điểm</a>
        <a href="#">📊 Thống kê</a>
        <a href="#">⚙️ Cài đặt</a>
    </div>

    <!-- MAIN -->
    <div class="main">
        <div class="header">
            <div class="greeting">👋 Chào mừng, @role <strong>@hoten</strong></div>
            <div class="user-info">
                <div class="name">@hoten</div>
                <div class="email">@email</div>
            </div>
        </div>

        <main>
            @RenderBody()
        </main>
    </div>
</body>
</html>
