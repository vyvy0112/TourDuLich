

@{
    ViewData["Title"] = "Quản lý đặt tour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
 @model IEnumerable<VNTour.Data.DatTour>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý trạng thái đặt tour</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .tooltip-text {
            transition: opacity 0.2s;
        }

        .group:hover .tooltip-text {
            visibility: visible;
            opacity: 1;
        }

        .status-selector {
            display: none;
        }

            .status-selector.show {
                display: flex;
            }

        .status-badge {
            display: inline-block;
            text-align: center;
            min-width: 120px;
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .status-pending {
            background-color: #FFF7ED;
            color: #B45309;
            border: 1px solid #FCD34D;
        }

        .status-paid {
            background-color: #ECFDF5;
            color: #065F46;
            border: 1px solid #34D399;
        }

        .status-cancelled {
            background-color: #FEF2F2;
            color: #B91C1C;
            border: 1px solid #FCA5A5;
        }

        .status-completed {
            background-color: #EFF6FF;
            color: #1D4ED8;
            border: 1px solid #93C5FD;
        }

        .status-default {
            background-color: #F3F4F6;
            color: #6B7280;
            border: 1px solid #D1D5DB;
        }
    </style>
</head>

@Html.AntiForgeryToken()
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6 border-b">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                    <div>
                        
                        <h2 class="text-2xl font-bold text-gray-800 mt-2">Quản lý đặt tour</h2>
                    </div>
                    @if (TempData["Success"] != null)
                    {
                        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                            <strong class="font-bold">Thành công!</strong>
                            <span class="block sm:inline">@TempData["Success"]</span>
                        </div>
                    }

                </div>
                <div class="mt-6 bg-gray-50 p-4 rounded-lg">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                        <div class="flex flex-col md:flex-row md:items-center gap-3">
                          
                            <div class="flex flex-col md:flex-row gap-4 w-full">
                                <!-- Ô tìm kiếm -->
                                <!-- Tìm kiếm lớn hơn -->
                                <div class="relative flex-1">
                                    <input type="text" placeholder="Tìm kiếm đơn đặt tour..."
                                           class="pl-12 pr-4 py-3 border rounded-lg w-full text-base focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                    <i class="fas fa-search absolute left-4 top-3.5 text-gray-400 text-lg"></i>
                                </div>

                                <!-- Dropdown trạng thái lớn hơn -->
                                <div class="relative flex-1">
                                    <select id="statusFilter"
                                            class="pl-4 pr-4 py-3 border rounded-lg w-full text-base text-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                        <option value="all">Tất cả trạng thái</option>
                                        <option value="pending">Chờ xác nhận</option>
                                        <option value="confirmed">Đã xác nhận</option>
                                        <option value="deposit">Đã đặt cọc</option>
                                        <option value="processing">Đang xử lý</option>
                                        <option value="completed">Đã hoàn thành</option>
                                    </select>
                                </div>


                                <div>
                                    <button onclick="filterBookings()"
                                            class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-lg text-sm w-full md:w-auto">
                                        <i class="fas fa-search mr-2"></i> Tìm kiếm
                                    </button>
                                </div>
                            </div>                         
                        </div>
                     
                       

                    </div>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-indigo-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">
                                    <div class="flex items-center">
                                        Mã đặt
                                       @*  <i class="fas fa-sort ml-1 text-gray-400"></i> *@
                                    </div>
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hình Ảnh</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Khách hàng</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tour</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày đi</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Số khách</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tổng tiền</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                            </tr>
                        </thead>


                   @foreach (var item in Model)
{
    <tbody class="bg-white divide-y divide-gray-200">
        <tr class="booking-row" data-status="@item.TrangThai">
            <!-- Mã đơn -->
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                @item.IdDatTour
            </td>

            <!-- Hình ảnh tour -->
            <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex justify-center">
                    <img src="~/hinhanh/@item.IdTourNavigation.HinhAnh"
                         alt="@item.IdTourNavigation.TenTour"
                         class="w-24 h-24 object-cover rounded-lg shadow-md border border-gray-200">
                </div>
            </td>

            <!-- Tên khách hàng -->
            <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">@item.IdKhachHangNavigation.HoTenKh</div>
                <div class="text-sm text-gray-500">@item.IdKhachHangNavigation.Sdt</div>
            </td>

            <!-- Tên tour -->
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                @item.IdTourNavigation.TenTour
            </td>

            <!-- Ngày đi -->
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                @item.IdNkhNavigation.NgayKhoiHanh1.ToString("dd/MM/yyyy")
            </td>
                                   
            <!-- Số khách -->
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                @(item.SoNguoiLon + item.SoTreEm) người
            </td>

            <!-- Tổng tiền -->
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                @item.TongTien vnđ
            </td>


                                   
            <td>
                <div class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            @{
                                                var statusClass = item.TrangThai switch
                                                {
                                                    "Chờ Xác Nhận" => "status-pending",
                                                    "Đã Thanh Toán" => "status-paid",
                                                    "Đã Hủy" => "status-cancelled",
                                                    "Đã Hoàn Thành" => "status-completed",
                                                    _ => "status-default"
                                                };
                                            }
                                            <span class="status-badge px-3 py-1 rounded-full font-semibold text-xs @statusClass">
                                                @item.TrangThai
                                            </span>

                            
                   </div>
            </td>
            <td>
                                        @if (item.TrangThai != "Đã Hủy" && item.TrangThai != "Đã Hoàn Thành")
                                        {
                                            <form asp-action="HuyDatTour" asp-route-id="@item.IdDatTour" method="post" class="inline-block"
                                                  onsubmit="return confirm('Bạn có chắc muốn hủy đơn đặt tour này không?');">
                                                <button type="submit"
                                                        class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium shadow-sm">
                                                    <i class="fas fa-ban mr-2"></i> Hủy tour
                                                </button>
                                            </form>
                                        }


            </td>
              
                   
  

                     
        </tr>
    </tbody>
}

                    </table>
                </div>

                <div class="bg-gray-50 px-6 py-3 flex items-center justify-between border-t border-gray-200">
                    <div class="text-sm text-gray-500">Hiển thị <span class="font-medium">1</span> đến <span class="font-medium">5</span> trên <span class="font-medium">23</span> kết quả</div>
                    <div class="flex space-x-2">
                        <button class="px-3 py-1 border rounded-md text-sm font-medium">Trước</button>
                        <button class="px-3 py-1 border rounded-md bg-indigo-600 text-white text-sm font-medium">1</button>
                        <button class="px-3 py-1 border rounded-md text-sm font-medium">2</button>
                        <button class="px-3 py-1 border rounded-md text-sm font-medium">3</button>
                        <button class="px-3 py-1 border rounded-md text-sm font-medium">Sau</button>
                    </div>
                </div>
            </div>
        </div>

      

</body>



</html>
