@model VNTour.ViewModel.MaGiamGiaVM

@{
    ViewData["Title"] = "Chỉnh sửa mã giảm giá";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<!-- Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<style>
    .form-wrapper {
        max-width: 720px;
        margin: 40px auto;
        padding: 30px 40px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.06);
    }

    .form-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 25px;
        color: #343a40;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 6px;
        display: block;
        color: #495057;
    }

    .form-control,
    .form-select {
        width: 100%;
        padding: 10px 14px;
        font-size: 15px;
        border-radius: 8px;
        border: 1px solid #ced4da;
    }

    .form-actions {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }

    .btn-success, .btn-secondary {
        padding: 10px 20px;
        font-weight: 500;
        border-radius: 8px;
        border: none;
        color: #fff;
    }

    .btn-success {
        background-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-danger {
        font-size: 14px;
        margin-top: 4px;
    }
</style>

<div class="form-wrapper">
    <h2 class="form-title">📝 Chỉnh sửa mã giảm giá</h2>

    <form asp-action="EditMaGiamGia" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="IdGiamGia" />

        <div class="form-group">
            <label asp-for="MaCode" class="form-label"></label>
            <input asp-for="MaCode" class="form-control" />
            <span asp-validation-for="MaCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MoTa" class="form-label"></label>
            <input asp-for="MoTa" class="form-control" />
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhanTramGiam" class="form-label"></label>
            <input asp-for="PhanTramGiam" class="form-control" type="number" min="1" max="100" />
            <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NgayBatDau" class="form-label"></label>
            <input asp-for="NgayBatDau" class="form-control" type="date" />
            <span asp-validation-for="NgayBatDau" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NgayKetThuc" class="form-label"></label>
            <input asp-for="NgayKetThuc" class="form-control" type="date" />
            <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SoLuong" class="form-label"></label>
            <input asp-for="SoLuong" class="form-control" type="number" min="1" />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TrangThai" class="form-label"></label>
            <select asp-for="TrangThai" class="form-control">
                <option value="Hoạt Động" selected="@Model.TrangThai == "Hoạt Động"">Hoạt Động</option>
                <option value="Ngưng Hoạt Động" selected="@Model.TrangThai == "Ngưng Hoạt Động"">Ngưng Hoạt Động</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>

     
       

        <div class="form-actions">
            <button type="submit" class="btn btn-success"> Lưu Thay Đổi</button>
            <a asp-action="ListGiamGia" class="btn btn-secondary"> Hủy</a>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#multi-tour-select').select2({
            placeholder: "Chọn các tour áp dụng",
            allowClear: true,
            width: '100%'
        });
    });
</script>
