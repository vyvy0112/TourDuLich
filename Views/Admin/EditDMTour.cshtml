@model VNTour.Data.DanhMucTour

@{
    ViewData["Title"] = "EditDMTour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8f9fa;
    }

    .form-wrapper {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px 40px;
        background-color: #ffffff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        border-radius: 12px;
    }

    .form-title {
        font-size: 24px;
        font-weight: 600;
        color: #343a40;
        margin-bottom: 24px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        width: 70%;
        margin-left: auto;
        margin-right: auto;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 6px;
        color: #495057;
    }

    .form-control,
    .form-select {
        padding: 10px 14px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        font-size: 15px;
    }

    .form-actions {
        margin-top: 30px;
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        font-weight: 500;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }

    .btn-back {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }

    .text-danger {
        font-size: 14px;
        margin-top: 4px;
    }
</style>

<div class="form-wrapper">
    <h2 class="form-title">Chỉnh sửa Danh Mục Tour</h2>

    <form asp-action="EditDMTour">
        <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
        <input type="hidden" asp-for="IdDanhMuc" />

        <div class="form-group">
            <label asp-for="TenDanhMuc" class="form-label">Tên danh mục</label>
            <input asp-for="TenDanhMuc" class="form-control" />
            <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TrangThai" class="form-label">Trạng thái</label>
            <select asp-for="TrangThai" class="form-select">
                <option value="Hoạt Động" selected="@("Hoạt Động" == Model.TrangThai)">Hoạt Động</option>
                <option value="Ngưng Hoạt Động" selected="@("Ngưng Hoạt Động" == Model.TrangThai)">Ngưng Hoạt Động</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Lưu" class="btn-primary" />
            <a asp-action="ListDanhMucTour" class="btn-back">Quay lại</a>
        </div>
    </form>
</div>
