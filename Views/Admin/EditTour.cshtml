@model VNTour.Data.Tour

@{
    ViewData["Title"] = "EditTour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f1f3f5;
        margin: 0;
        padding: 0;
    }

    .form-wrapper {
        background-color: #ffffff;
        border-radius: 14px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.06);
        padding: 40px 50px;
        margin: 40px auto;
        max-width: 100%;
    }

    .form-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        border-bottom: 3px solid #007bff;
        padding-bottom: 6px;
        margin-bottom: 30px;
        display: inline-block;
    }

    .icon-title {
        font-size: 22px;
        color: #007bff;
        margin-right: 8px;
    }


    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
    }

    .form-col {
        flex: 1 1 48%;
        min-width: 300px;
    }

    .form-group {
        margin-bottom: 22px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
        color: #34495e;
        display: block;
    }


    .form-control,
    .form-select {
        width: 60%;
        padding: 12px 16px;
        font-size: 15px;
        border-radius: 10px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
            outline: none;
        }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
        width: 60%;
    }


    input[type="checkbox"] {
        transform: scale(1.2);
        margin-right: 8px;
    }

    .form-actions {
        display: flex;
        justify-content: flex-start;
        gap: 12px;
        margin-top: 30px;
    }

    .btn-submit {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 12px 28px;
        border-radius: 8px;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #0069d9;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 12px 28px;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
        }
</style>






<div class="container">
    <div class="form-wrapper">
        <h2 class="form-title">Chỉnh sửa Tour</h2>
        <form asp-action="EditTour" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTour" />

            <div class="form-row">
                <div class="form-col">
                    <div class="form-group">
                        <label asp-for="TenTour" class="form-label"></label>
                        <input asp-for="TenTour" class="form-control" />
                        <span asp-validation-for="TenTour" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="GiaNguoiLon" class="form-label"></label>
                        <input asp-for="GiaNguoiLon" class="form-control" />
                        <span asp-validation-for="GiaNguoiLon" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ThoiGian" class="form-label"></label>
                        <input asp-for="ThoiGian" class="form-control" />
                        <span asp-validation-for="ThoiGian" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiemDen" class="form-label"></label>
                        <input asp-for="DiemDen" class="form-control" />
                        <span asp-validation-for="DiemDen" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-col">

                    <div class="form-group">
                        <label asp-for="MoTa" class="form-label"></label>
                        <textarea asp-for="MoTa" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="GiaTreEm" class="form-label"></label>
                        <input asp-for="GiaTreEm" class="form-control" />
                        <span asp-validation-for="GiaTreEm" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiemKhoiHanh" class="form-label"></label>
                        <input asp-for="DiemKhoiHanh" class="form-control" />
                        <span asp-validation-for="DiemKhoiHanh" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label class="form-label">Ảnh hiện tại</label><br />
                        @if (!string.IsNullOrEmpty(Model.HinhAnh))
                        {
                            <img src="~/hinhanh/@Model.HinhAnh" width="150" class="img-thumbnail" />
                        }
                        else
                        {
                            <span>Chưa có hình ảnh</span>
                        }
                    </div>
           

                   


                    <div class="form-group">
                        <label class="form-label">Chọn ảnh mới (nếu có):</label>
                        <input type="file" name="HinhAnhFile" class="form-control" />
                    </div>


                    <div class="form-group">
                        <label class="form-label">Ảnh phụ (có thể chọn nhiều)</label>
                        <input type="file" name="HinhAnhPhu" multiple class="form-control" />
                    </div>
                </div>
            </div>
            @{
                var ngayKhoiHanhList = Model.NgayKhoiHanhs?.ToList() ?? new List<VNTour.Data.NgayKhoiHanh>();
            }


            <h4 class="form-title mt-4">Ngày Khởi Hành</h4>
            <div id="ngayKhoiHanhContainer">
                @for (int i = 0; i < ngayKhoiHanhList.Count; i++)
                {
                    <div class="form-row mb-3">
                        <!-- THÊM DÒNG NÀY -->
                        <input type="hidden" name="NgayKhoiHanhs[@i].IdNkh" value="@ngayKhoiHanhList[i].IdNkh" />

                        <input type="hidden" name="NgayKhoiHanhs[@i].IdTour" value="@Model.IdTour" />

                        <div class="form-group col-md-4">
                            <label>Ngày khởi hành</label>
                            <input type="date" name="NgayKhoiHanhs[@i].NgayKhoiHanh1" value="@ngayKhoiHanhList[i].NgayKhoiHanh1.ToString("yyyy-MM-dd")" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label>Ngày kết thúc</label>
                            <input type="date" name="NgayKhoiHanhs[@i].NgayKetThuc" value="@ngayKhoiHanhList[i].NgayKetThuc.ToString("yyyy-MM-dd")" class="form-control" />
                        </div>
                        <div class="form-group col-md-3">
                            <label>Số chỗ còn lại</label>
                            <input type="number" name="NgayKhoiHanhs[@i].SoChoConLai" value="@ngayKhoiHanhList[i].SoChoConLai" class="form-control" />
                        </div>
                    </div>
                }

            </div>

            <button type="button" class="btn btn-secondary mb-3" onclick="addNgayKhoiHanh()">+ Thêm ngày khởi hành</button>


            <div class="form-group">
                <label asp-for="TrangThai" class="form-label">Trạng thái</label>
                <select asp-for="TrangThai" asp-items="ViewBag.TrangThaiList" class="form-select"></select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdDanhMuc" class="form-label">Danh mục</label>
                <select asp-for="IdDanhMuc" asp-items="ViewBag.IdDanhMuc" class="form-select"></select>
                <span asp-validation-for="IdDanhMuc" class="text-danger"></span>
            </div>

            

            <div class="form-actions">
                <input type="submit" value="Lưu" class="btn-submit" />
                <a asp-action="ListTour" class="btn-cancel">Quay lại</a>
            </div>
        </form>

    </div>

</div>

<script>
    function addNgayKhoiHanh() {
        var index = document.querySelectorAll('#ngayKhoiHanhContainer .form-row').length;

        var html = `
                <div class="form-row mb-3">
                    <input type="hidden" name="NgayKhoiHanhs[${index}].IdTour" value="@Model.IdTour" />
                    <div class="form-group col-md-4">
                        <label>Ngày khởi hành</label>
                        <input type="date" name="NgayKhoiHanhs[${index}].NgayKhoiHanh1" class="form-control" />
                    </div>
                    <div class="form-group col-md-4">
                        <label>Ngày kết thúc</label>
                        <input type="date" name="NgayKhoiHanhs[${index}].NgayKetThuc" class="form-control" />
                    </div>
                    <div class="form-group col-md-3">
                        <label>Số chỗ còn lại</label>
                        <input type="number" name="NgayKhoiHanhs[${index}].SoChoConLai" class="form-control" />
                    </div>
                </div>`;

        document.getElementById("ngayKhoiHanhContainer").insertAdjacentHTML("beforeend", html);
    }
</script>
