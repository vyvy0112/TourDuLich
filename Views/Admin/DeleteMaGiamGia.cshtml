@model VNTour.Data.MaGiamGium

@{
    ViewData["Title"] = "Xóa mã giảm giá";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .delete-wrapper {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px 40px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        font-family: 'Segoe UI', sans-serif;
    }

    .delete-title {
        font-size: 26px;
        font-weight: 700;
        color: #dc3545;
        text-align: center;
        margin-bottom: 20px;
    }

    .delete-subtitle {
        font-size: 16px;
        text-align: center;
        color: #6c757d;
        margin-bottom: 25px;
    }

    .info-group {
        display: flex;
        margin-bottom: 12px;
    }

        .info-group dt {
            width: 40%;
            font-weight: 600;
            color: #343a40;
        }

        .info-group dd {
            width: 60%;
            color: #495057;
            margin: 0;
        }

    .form-actions {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        font-weight: 500;
        transition: background-color 0.2s;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<div class="delete-wrapper">
    <h2 class="delete-title"> Xác nhận xóa mã giảm giá</h2>
    <p class="delete-subtitle">Bạn có chắc chắn muốn xóa mã <strong>@Model.MaCode</strong> này?</p>

    <dl>
        <div class="info-group">
            <dt>Mô tả:</dt>
            <dd>@Model.MoTa</dd>
        </div>
        <div class="info-group">
            <dt>Phần trăm giảm:</dt>
            <dd>@Model.PhanTramGiam%</dd>
        </div>
        <div class="info-group">
            <dt>Ngày bắt đầu:</dt>
            <dd>@Model.NgayBatDau?.ToString("dd/MM/yyyy")</dd>
        </div>
        <div class="info-group">
            <dt>Ngày kết thúc:</dt>
            <dd>@Model.NgayKetThuc?.ToString("dd/MM/yyyy")</dd>
        </div>
        <div class="info-group">
            <dt>Số lượng:</dt>
            <dd>@Model.SoLuong</dd>
        </div>
    </dl>

    <form asp-action="DeleteMaGiamGiaConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="IdGiamGia" />
        <div class="form-actions">
            <button type="submit" class="btn btn-danger"> Xác Nhận Xóa</button>
            <a asp-action="ListGiamGia" class="btn btn-secondary"> Huỷ</a>
        </div>
    </form>
</div>
