
@model VNTour.Data.Tour

@{
    ViewData["Title"] = "DeleteDMTour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .delete-wrapper {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px 40px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    }

    .delete-title {
        font-size: 24px;
        font-weight: 600;
        color: #dc3545;
        text-align: center;
        margin-bottom: 20px;
    }

    .delete-subtitle {
        font-size: 18px;
        text-align: center;
        color: #6c757d;
        margin-bottom: 30px;
    }

    .dl-horizontal {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

        .dl-horizontal .dl-row {
            display: flex;
            align-items: center;
        }

        .dl-horizontal dt {
            width: 30%;
            font-weight: 500;
            color: #343a40;
            margin: 0;
        }

        .dl-horizontal dd {
            width: 70%;
            color: #495057;
            margin: 0;
        }


    .form-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px; 
    }


    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 10px 20px;
        font-weight: 500;
        border-radius: 8px;
        color: white;
        transition: background-color 0.2s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-back {
        background-color: #6c757d;
        padding: 10px 20px;
        color: white;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }
</style>

<div class="delete-wrapper">
    <h2 class="delete-title">Xác nhận xóa Danh Mục Tour</h2>
    <p class="delete-subtitle">Bạn có chắc chắn muốn xóa tour này?</p>

    <dl class="dl-horizontal">
        <div class="dl-row">
            <dt>Tên tour</dt>
            <dd>@Html.DisplayFor(model => model.TenTour)</dd>
        </div>
        <div class="dl-row">
            <dt>Mô tả</dt>
            <dd>@Html.DisplayFor(model => model.MoTa)</dd>
        </div>
        <div class="dl-row">
            <dt>Giá Người Lớn</dt>
            <dd>@Html.DisplayFor(model => model.GiaNguoiLon)</dd>
        </div>
        <div class="dl-row">
            <dt>Giá Trẻ Em</dt>
            <dd>@Html.DisplayFor(model => model.GiaTreEm)</dd>
        </div>
        <div class="dl-row">
            <dt>Thời Gian</dt>
            <dd>@Html.DisplayFor(model => model.ThoiGian)</dd>
        </div>
        <div class="dl-row">
            <dt>Điểm Khởi Hành</dt>
            <dd>@Html.DisplayFor(model => model.DiemKhoiHanh)</dd>
        </div>
        <div class="dl-row">
            <dt>Điểm Đến </dt>
            <dd>@Html.DisplayFor(model => model.DiemDen)</dd>
        </div>
        <div class="dl-row">
            <dt>Ngày Khởi Hành</dt>
            <dd>@Html.DisplayFor(model => model.NgayKhoiHanh)</dd>
        </div>
        <div class="dl-row">
            <dt>Ngày Về</dt>
            <dd>@Html.DisplayFor(model => model.NgayVe)</dd>
        </div>
        <div class="dl-row">
            <dt>Số Chỗ</dt>
            <dd>@Html.DisplayFor(model => model.SoCho)</dd>
        </div>
        <div class="dl-row">
            <dt>Trạng Thái</dt>
            <dd>@Html.DisplayFor(model => model.TrangThai)</dd>
        </div>
    </dl>


    <form asp-action="DeleteDMTour">
        <input type="hidden" asp-for="IdTour" />
        <div class="form-actions">
            <input type="submit" value="Xóa" class="btn-danger" />
            <a asp-action="ListTour" class="btn-back">Quay lại</a>
        </div>
    </form>
</div>

