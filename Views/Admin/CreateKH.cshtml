<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f1f3f5;
        margin: 0;
        padding: 0;
    }

    .form-wrapper {
        background-color: #ffffff;
        border-radius: 14px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.06);
        padding: 40px 50px;
        margin: 40px auto;
        max-width: 600px;
    }

    .form-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        padding-bottom: 8px;
        margin-bottom: 30px;
        text-align: center;
        display: block;
    }

    .form-group {
        margin-bottom: 22px;
    }

    .form-label {
        font-weight: 600;
        font-size: 15px;
        margin-bottom: 6px;
        color: #34495e;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px 14px;
        font-size: 15px;
        border-radius: 10px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 6px rgba(0, 123, 255, 0.3);
            outline: none;
        }

    .form-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .btn-submit {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 12px 28px;
        border-radius: 8px;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #0069d9;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 12px 28px;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
        }

    .text-danger {
        font-size: 14px;
    }
</style>

<div class="form-wrapper">
    <div class="form-title"> Thêm Khách Hàng</div>

    <form asp-action="CreateKH" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

        <div class="form-group">
            <label asp-for="HoTenKh" class="form-label">Họ tên khách hàng</label>
            <input asp-for="HoTenKh" class="form-control" placeholder="Nhập họ tên..." />
            <span asp-validation-for="HoTenKh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sdt" class="form-label">Số điện thoại</label>
            <input asp-for="Sdt" class="form-control" placeholder="Nhập số điện thoại..." />
            <span asp-validation-for="Sdt" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
            <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ..." />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MatKhau" class="form-label">Mật khẩu</label>
            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
            <span asp-validation-for="MatKhau" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">Lưu</button>
            <a asp-action="ListKH" class="btn-cancel">Quay lại</a>
        </div>
    </form>
</div>
