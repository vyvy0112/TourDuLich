 @model VNTour.ViewModel.KhachHangVM


@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
 
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thông tin tài khoản</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .profile-hover {
          transition: all 0.3s ease;
        }
        .profile-hover:hover {
          transform: translateY(-3px);
          box-shadow: 0 20px 30px -10px rgba(0,0,0,0.1);
        }
        .progress-bar {
          height: 6px;
          border-radius: 3px;
          background-color: #e5e7eb;
        }
        .progress-fill {
          height: 100%;
          border-radius: 3px;
          background-color: #6366f1;
          transition: width 0.5s ease;
        }

        
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="max-w-5xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-4xl font-bold text-gray-800">Thông tin tài khoản</h1>
            <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Chỉnh sửa</button>
        </div>

        <!-- Hồ sơ -->
        <div class="bg-white p-6 rounded-lg profile-hover mb-8">
            <div class="flex flex-col md:flex-row items-center gap-6">
                <div class="flex-grow">
                    <h2 class="text-3xl font-bold text-gray-800">Nguyễn Văn A</h2>
                    <p class="text-lg text-gray-6000">Thành viên từ 12/2022</p>
                    <div class="flex items-center mt-2 gap-2">
                        <span class="text-base px-3 py-1">VIP</span>
                        <span class="bg-green-100 text-green-700 px-2 py-1 rounded text-xs">Đã xác minh</span>
                    </div>
                </div>

            </div>
        </div>

        <!-- Grid nội dung -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Thông tin cá nhân -->
            <div class="lg:col-span-2 space-y-6">
                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <h3 class="text-2xl font-semibold text-gray-800 mb-4">Chi tiết cá nhân</h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div><span class="text-base text-gray-500">Họ tên:</span><p class="text-gray-900">@Model.HoTenKh</p></div>
                        <div><span class="text-gray-900 text-sm">Email:</span><p class="text-gray-800">@Model.Email</p></div>
                        <div><span class="text-gray-900 text-sm">Số điện thoại:</span><p class="text-gray-800">@Model.Sdt</p></div>
                        <div><span class="text-gray-900 text-sm">Địa chỉ:</span><p class="text-gray-800">@Model.DiaChi</p></div>
                    </div>
                </div>

                <!-- Hoạt động -->
                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <h3 class="text-xl font-semibold text-gray-800 mb-4">Lịch sử hoạt động</h3>
                    <div class="space-y-3">
                        <div class="flex items-start gap-3">
                            <div class="bg-indigo-100 p-2 rounded-full">
                                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" stroke-width="2"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M5 13l4 4L19 7" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-lg text-gray-800">Đăng nhập lúc 15:30, 20/04/2023</p>
                                <p class="text-xs text-gray-500">IP: 192.168.1.1</p>
                            </div>
                        </div>                      
                    </div>
                </div>
            </div>

            <!-- Tùy chọn tài khoản -->
            <div class="space-y-6">
                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <h3 class="text-xl font-semibold text-gray-800 mb-4">Tùy chọn</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-2xl font-semibold text-gray-800 mb-4">Đổi mật khẩu</a></li>
                        <li><a href="#" class="text-lg text-indigo-600 hover:underline">Thiết lập bảo mật</a></li>
                        <li><a href="#" class="text-indigo-600 hover:underline">Lịch sử đơn hàng</a></li>
                        <li><a asp-controller="TaiKhoan" asp-action="DangXuat" class="text-red-500 hover:underline">Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
