@model VNTour.ViewModel.QuenMatKhauVM
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container mt-5">
    <h3 class="text-center">🔒 Quên mật khẩu</h3>

    <form asp-action="QuenMatKhau" method="post" class="mt-4 col-md-6 offset-md-3">
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Nhập email đã đăng ký" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Gửi mật khẩu mới</button>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mt-3">@TempData["Success"]</div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3">@TempData["Error"]</div>
        }
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
