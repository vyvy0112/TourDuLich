<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Be Vietnam Pro', sans-serif;
        }

        .backdrop-blur {
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-200 to-blue-100 p-4">
    <div class="w-full max-w-md">
        <div class="bg-white bg-opacity-60 backdrop-blur rounded-xl shadow-lg overflow-hidden">
            <div class="p-8">
                <!-- Header -->
                <div class="text-center mb-6">
                    <img src="~/hinhanh/logo.jpg" alt="Logo" class="mx-auto w-20 h-20 rounded-full mb-4" />
                    <h1 class="text-2xl font-bold text-gray-800">Tạo tài khoản mới</h1>
                    <p class="text-gray-600 mt-1">Nhập thông tin của bạn để bắt đầu</p>
                </div>

                <!-- Form -->
                <form asp-action="DangKy" asp-controller="TaiKhoan" class="space-y-4">
                    <!-- Họ và tên -->
                    <div>
                        <label for="HoTenKh" class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                        <input asp-for="HoTenKh"
                               id="HoTenKh"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                               placeholder="Nhập họ và tên của bạn" />
                        <span asp-validation-for="HoTenKh" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input asp-for="Email"
                               id="Email"
                               type="email"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                               placeholder="example@email.com" />
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- SĐT -->
                    <div>
                        <label for="Sdt" class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                        <input asp-for="Sdt"
                               id="Sdt"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                               placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="Sdt" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Địa chỉ -->
                    <div>
                        <label for="DiaChi" class="block text-sm font-medium text-gray-700 mb-1">Địa chỉ</label>
                        <input asp-for="DiaChi"
                               id="DiaChi"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                               placeholder="Nhập địa chỉ" />
                        <span asp-validation-for="DiaChi" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div>
                        <label for="MatKhau" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                        <input asp-for="MatKhau"
                               id="MatKhau"
                               type="password"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                               placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="MatKhau" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Điều khoản -->
                   @*  <div class="flex items-center">
                        <input asp-for="AcceptTerms"
                               id="AcceptTerms"
                               type="checkbox"
                               class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" />
                        <label for="AcceptTerms" class="ml-2 text-sm text-gray-700">
                            Tôi đồng ý với
                            <a href="#" class="text-indigo-600 hover:text-indigo-500">điều khoản</a> &amp;
                            <a href="#" class="text-indigo-600 hover:text-indigo-500">chính sách bảo mật</a>
                        </label>
                        <span asp-validation-for="AcceptTerms" class="text-red-600 text-sm ml-2"></span>
                    </div> *@

                    <!-- Nút Đăng ký -->
                    <div>
                        <button type="submit"
                                class="w-full bg-indigo-600 text-white py-3 rounded-lg font-medium hover:bg-indigo-700 transition">
                            Đăng ký
                        </button>
                    </div>
                </form>

                <!-- Link Đăng nhập -->
                <p class="mt-6 text-center text-sm text-gray-600">
                    Đã có tài khoản?
                    <a asp-action="DangNhap" asp-controller="TaiKhoan" class="text-indigo-600 hover:text-indigo-500">Đăng nhập</a>
                </p>

            </div>
        </div>
    </div>
</body>
</html>
