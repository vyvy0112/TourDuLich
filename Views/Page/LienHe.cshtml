
@{
    ViewData["Title"] = "LienHe";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@model VNTour.Data.LienHe


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liên hệ - Website Đặt Tour</title>
    <style>
        
        :root {
            --primary-color: #3498db;
            --secondary-color: #2980b9;
            --accent-color: #e74c3c;
            --light-color: #f5f7fa;
            --dark-color: #34495e;
            --text-color: #2c3e50;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Montserrat', sans-serif;
            line-height: 1.6;
            color: var(--text-color);
            background-color: #f9f9f9;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 20px 0;
            box-shadow: var(--shadow);
        }
        
        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .logo {
            font-size: 24px;
            font-weight: 700;
            text-decoration: none;
            color: white;
        }
        
        .contact-header {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        
        .contact-header a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: opacity 0.3s;
        }
        
        .contact-header a:hover {
            opacity: 0.8;
        }
        
        .contact-icon {
            font-size: 18px;
        }
        
        main {
            padding: 50px 0;
        }
    /*     
        h1 {
            text-align: center;
            margin-bottom: 40px;
            color: var(--dark-color);
            font-size: 36px;
        }
         */
        .contact-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }
        
       
        .contact-info {
            background-color: white;
            border-radius: 8px;
            padding: 30px;
            box-shadow: var(--shadow);
        }
        
        .info-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: var(--dark-color);
            position: relative;
            padding-bottom: 10px;
        }
        
        .info-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: var(--accent-color);
        }
        
        .info-item {
            display: flex;
            align-items: flex-start;
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .info-icon {
            font-size: 20px;
            color: var(--primary-color);
            min-width: 24px;
        }
        
        .info-content h3 {
            font-size: 18px;
            margin-bottom: 5px;
            color: var(--dark-color);
        }
        
        .info-content p, .info-content a {
            color: var(--text-color);
            text-decoration: none;
            transition: color 0.3s;
        }
        
        .info-content a:hover {
            color: var(--primary-color);
        }
        
        .social-links {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }
        
        .social-link {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--light-color);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 18px;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        
        .social-link:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        }
        
        .facebook {
            background-color: #3b5998;
        }
        
        .twitter {
            background-color: #1da1f2;
        }
        
        .instagram {
            background: linear-gradient(45deg, #405de6, #5851db, #833ab4, #c13584, #e1306c, #fd1d1d);
        }
        
        .linkedin {
            background-color: #0077b5;
        }
        
        .contact-form {
            background-color: white;
            border-radius: 8px;
            padding: 30px;
            box-shadow: var(--shadow);
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--dark-color);
        }
        
        input, textarea {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-family: inherit;
            font-size: 16px;
            transition: border-color 0.3s;
        }
        
        input:focus, textarea:focus {
            outline: none;
            border-color: var(--primary-color);
        }
        
        textarea {
            height: 120px;
            resize: vertical;
        }
        
        .submit-btn {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }
        
        .submit-btn:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
        }
        
        .map-container {
            grid-column: 1 / -1;
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: var(--shadow);
            height: 400px;
        }
        
        .map-container iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
        
        footer {
            background-color: var(--dark-color);
            color: white;
            text-align: center;
            padding: 20px 0;
            margin-top: 50px;
        }

        .heading-title {
            font-size: 36px;
            font-weight: 700;
            text-align: center;
            margin-top: 40px;
            margin-bottom: 20px;
            color: #2c3e50;
            text-transform: uppercase;
            position: relative;
        }

            .heading-title::after {
                content: "";
                width: 80px;
                height: 4px;
                background-color: #3498db;
                margin: 10px auto 0;
                border-radius: 2px;
            }
    </style>
    <!-- Liên kết Font Awesome cho icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    
    
    <main>
        <div class="container">
            <h1 class="heading-title">Liên hệ với chúng tôi</h1>
            @if (TempData["Success"] != null)
            {
                <div style="background-color: #d4edda; padding: 15px; border-radius: 5px; margin-bottom: 20px; color: #155724;">
                    @TempData["Success"]
                </div>
            }
            <div class="contact-container">
                <div class="contact-info">
                    <h2 class="info-title">Thông tin liên hệ</h2>
                    
                    <div class="info-item">
                        <i class="fas fa-map-marker-alt info-icon"></i>
                        <div class="info-content">
                            <h3>Địa chỉ văn phòng</h3>
                            <p>Số 123, Đường Nguyễn Huệ, Quận 1, Thành phố Hồ Chí Minh</p>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <i class="fas fa-envelope info-icon"></i>
                        <div class="info-content">
                            <h3>Email</h3>
                            <a href="mailto:contact@tourist.vn">contact@tourist.vn</a>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <i class="fas fa-phone-alt info-icon"></i>
                        <div class="info-content">
                            <h3>Số điện thoại</h3>
                            <a href="tel:+842837654321">+84 28 3765 4321</a> (Văn phòng)<br>
                            <a href="tel:+84987654321">+84 987 654 321</a> (Hotline)
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <i class="fas fa-clock info-icon"></i>
                        <div class="info-content">
                            <h3>Giờ làm việc</h3>
                            <p>Thứ 2 - Thứ 6: 8:00 - 17:00<br>
                            Thứ 7: 8:00 - 12:00<br>
                            Chủ nhật: Nghỉ</p>
                        </div>
                    </div>
                    
                    <h3 style="margin-top: 30px;">Kết nối với chúng tôi</h3>
                    <div class="social-links">
                        <a href="#" class="social-link facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link linkedin"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
              

                
                <div class="contact-form">
                    <h2 class="info-title">Gửi tin nhắn cho chúng tôi</h2>
                    <form asp-controller="Page" asp-action="LienHe" method="POST">
                        <div class="form-group">
                            <label for="HoTen">Họ và tên</label>
                            <input type="text" id="HoTen" name="HoTen" required>
                        </div>
                                                
                        <div class="form-group">
                            <label for="SoDienThoai">Số điện thoại</label>
                            <input type="tel" id="SoDienThoai" name="SoDienThoai">
                        </div>                       
                        
                        <div class="form-group">
                            <label for="NoiDung">Nội dung</label>
                            <textarea id="message" name="NoiDung" required></textarea>
                        </div>
                        
                        <button type="submit" class="submit-btn">Gửi tin nhắn</button>
                    </form>
                </div>
                
                <div class="map-container">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.1477537181127!2d106.669670512981!3d10.7999934918145!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175292f3a5eece1%3A0x1a2a3aa65b78b20d!2zMjM5YSDEkC4gSG_DoG5nIFbEg24gVGjhu6UsIFBoxrDhu51uZyA4LCBQaMO6IE5odeG6rW4sIEjhu5MgQ2jDrSBNaW5oIDcwMDAwMCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1752627631428!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </main>
    
 
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
