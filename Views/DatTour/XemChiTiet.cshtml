 @model VNTour.Data.DatTour

@{
    ViewData["Title"] = "Chi tiết đặt tour";
    var tour = Model;
}

<div class="container py-4">
    <h2 class="text-primary mb-4 text-center">Chi tiết đặt tour</h2>

    <div class="card shadow border-0">
        <div class="row g-0">
            <!-- Hình ảnh tour -->
            <div class="col-md-5">
                <img src="~/hinhanh/@Model.IdTourNavigation.HinhAnh" alt="@Model.IdTourNavigation.TenTour" class="img-fluid rounded-start" style="height: 100%; object-fit: cover;" />
            </div>

            <!-- Thông tin tour -->
            <div class="col-md-7">
                <div class="card-body p-4">
                    <h4 class="card-title text-primary mb-3">@tour.IdTourNavigation?.TenTour</h4>

                    <dl class="row">
                        <dt class="col-sm-5">Mã đặt tour</dt>
                        <dd class="col-sm-7 fw-semibold">@tour.IdDatTour</dd>

                        <dt class="col-sm-5">Khách hàng</dt>
                        <dd class="col-sm-7">@tour.IdKhachHangNavigation?.HoTenKh</dd>

                        <dt class="col-sm-5">Email</dt>
                        <dd class="col-sm-7">@tour.IdKhachHangNavigation?.Email</dd>

                        <dt class="col-sm-5">Địa chỉ</dt>
                        <dd class="col-sm-7">@tour.DiaChi</dd>

                        <dt class="col-sm-5">Ngày đặt</dt>
                        <dd class="col-sm-7">@tour.NgayDat</dd>

                        <dt class="col-sm-5">Ngày khởi hành</dt>
                        <dd class="col-sm-7">@tour.IdNkhNavigation?.NgayKhoiHanh1.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-5">Số người lớn</dt>
                        <dd class="col-sm-7">@tour.SoNguoiLon</dd>

                        <dt class="col-sm-5">Số trẻ em</dt>
                        <dd class="col-sm-7">@tour.SoTreEm</dd>

                        <dt class="col-sm-5">Phương thức thanh toán</dt>
                        <dd class="col-sm-7">@tour.PtthanhToan</dd>

                        <dt class="col-sm-5">Trạng thái</dt>
                        <dd class="col-sm-7">@tour.TrangThai</dd>

                        <dt class="col-sm-5">Mã giảm giá</dt>
                        <dd class="col-sm-7">@tour.IdGiamGiaNavigation?.MaCode</dd>

                        <dt class="col-sm-5">Tổng tiền</dt>
                        <dd class="col-sm-7 text-danger fw-bold">@((tour.TongTien ?? 0).ToString("N0")) VNĐ</dd>

                        <dt class="col-sm-5">Ghi chú</dt>
                        <dd class="col-sm-7">@tour.GhiChu</dd>
                    </dl>

                    <div class="text-end mt-4">
                        <a asp-action="LichSuDatTour" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
