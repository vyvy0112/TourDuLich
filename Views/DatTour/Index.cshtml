@{
    ViewData["Title"] = "Đặt Tour";
    Layout = "~/Views/Shared/_LayoutMain.cshtml"; // ← Dùng layout mặc định
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

   <style>
    .container {
        max-width: 1200px;
    }

    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        font-size: 1.1rem;
        font-weight: bold;
    }

    input[type="text"], input[type="email"], input[type="date"], .form-control {
        border-radius: 6px;
        border: 1px solid #ced4da;
        transition: border 0.2s ease;
    }

    input:focus {
        border-color: #007bff;
        box-shadow: 0 0 4px rgba(0, 123, 255, 0.25);
    }

    .input-group button {
        width: 38px;
        height: 38px;
    }

    .input-group input {
        width: 60px;
    }

    .img-thumbnail {
        width: 100px;
        height: 80px;
        object-fit: cover;
        border-radius: 6px;
        border: none;
    }

    .form-check-label a {
        color: #007bff;
        text-decoration: underline;
    }

    .form-check-label a:hover {
        color: #0056b3;
    }

    .fs-5 {
        font-size: 1.2rem;
    }

    .fs-4 {
        font-size: 1.6rem;
    }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
        padding: 12px 0;
        font-size: 1rem;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

     .input-group .btn-outline-secondary {
        background-color: #007bff; /* Xanh nước biển */
        color: white;
        border-color: #007bff;
    }

        .input-group button,
        .input-group input {
            height: 32px !important; /* Hoặc 30px nếu muốn ngắn hơn nữa */
            padding: 4px 8px;
            font-size: 0.9rem;
        }

    .input-group .btn-outline-secondary:hover {
        background-color: #0056b3; /* Màu xanh đậm khi hover */
        border-color: #0056b3;
    }

    .alert-info {
        background-color: #eaf4ff;
        color: #0c63e4;
        border-left: 5px solid #0c63e4;
        font-size: 0.95rem;
    }

    .discount-code-box {
        border: 1px dashed #aaa;
        border-radius: 6px;
        padding: 10px;
        background: #f9f9f9;
        margin-bottom: 15px;
    }


    h5.fw-bold {
        font-size: 1.1rem;
        margin-top: 15px;
        margin-bottom: 10px;
    }
</style>
</head>
<body>
   
   <div class="container my-5">
    <div class="row">
        
        <div class="col-md-7 px-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header">THÔNG TIN LIÊN LẠC</div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-user-circle me-2"></i>
                        <a href="/Account/Login" class="fw-bold">Đăng nhập</a> để nhận ưu đãi và quản lý đơn hàng dễ dàng hơn!
                    </div>
                    <form>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label>Họ tên *</label>
                                <input type="text" class="form-control" placeholder="Nguyễn Văn A" />
                            </div>
                            <div class="col-md-6">
                                <label>Điện thoại *</label>
                                <input type="text" class="form-control" placeholder="0123456789" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label>Email *</label>
                                <input type="email" class="form-control" placeholder="email@example.com" />
                            </div>
                            <div class="col-md-6">
                                <label>Địa chỉ</label>
                                <input type="text" class="form-control" placeholder="123 Đường ABC, Quận X" />
                            </div>
                        </div>

                        <h5 class="fw-bold">HÀNH KHÁCH</h5>
                        <div class="row text-center">
                            <div class="col-md-4 mb-3 d-flex flex-column align-items-center">
                                <label>Người lớn (≥12)</label>
                                <div class="input-group justify-content-center">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="text" class="form-control text-center" value="1" readonly />
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3 d-flex flex-column align-items-center">
                                <label>Trẻ em (2-11)</label>
                                <div class="input-group justify-content-center">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="text" class="form-control text-center" value="0" readonly />
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                            </div>                     
                        </div>

                        <div class="form-check mt-3">
                            <input class="form-check-input" type="checkbox" id="supportCheck" checked />
                            <label class="form-check-label" for="supportCheck">
                                Tôi cần nhân viên tư vấn hỗ trợ điền thông tin
                            </label>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- ==== Cột phải: Tóm tắt chuyến đi ==== -->
        <div class="col-md-5 px-3">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">TÓM TẮT CHUYẾN ĐI</div>
                <div class="card-body">
                    <div class="d-flex mb-3">
                        <img src="~/hinhanh/tour.jpg" class="img-thumbnail me-3" alt="Tour" />
                        <div>
                            <h6 class="fw-bold mb-1">Singapore - Malaysia (1 đêm tại Singapore)</h6>
                            <small class="text-muted">Mã tour: <strong>NNSGN221-036-090725VN-D</strong></small>
                        </div>
                    </div>

                    <h6 class="fw-bold mt-3">✈️ THÔNG TIN CHUYẾN BAY</h6>
                    <p class="mb-1">Ngày đi: <strong>09/07/2025</strong></p>
                    <p class="mb-1">SGN → SIN: 09:05 - 12:15</p>
                    <p class="mb-3">KUL → SGN: 19:10 - 20:15</p>

                    <div class="discount-code-box">
                        <label>Mã giảm giá</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập mã giảm giá..." />
                            <button class="btn btn-outline-primary" style="width: 150px;">Áp dụng</button>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" checked id="policyCheck" />
                        <label class="form-check-label" for="policyCheck">
                            Tôi đồng ý với <a href="#">Chính sách</a> và <a href="#">Điều khoản</a>
                        </label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="fs-5">Tổng tiền</span>
                        <span class="fs-4 text-danger fw-bold">15.490.000 đ</span>
                    </div>

                    <button class="btn btn-danger w-100">Nhập thông tin để đặt tour</button>
                </div>
            </div>
        </div>
    </div>
</div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
