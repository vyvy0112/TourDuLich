<div class="container my-5">
    <div class="row g-4">
        <!-- Left Column -->
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold">@Model.TenTour</h1>
            <div class="text-muted mb-3">Đánh giá: <span class="badge bg-success fs-6">9.5</span> Tuyệt vời | 8 đánh giá</div>

            <!-- Main Image -->
            <div class="position-relative rounded overflow-hidden shadow">
                <img id="mainImage" src="~/hinhanh/@Model.HinhAnh" alt="@Model.TenTour" class="img-fluid w-100" style="object-fit: cover; height: 400px;">
                <span class="position-absolute top-0 start-0 bg-danger text-white px-3 py-1 rounded-bottom">Ưu đãi đặc biệt</span>
            </div>

            <!-- Thumbnail Images -->
            <div class="d-flex flex-wrap gap-2 mt-3">
                @if (hinhAnhs != null && hinhAnhs.Count > 0)
                {
                    foreach (var img in hinhAnhs)
                    {
                        <img src="~/hinhanh/@img" onclick="changeMainImage(this)" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover; cursor: pointer;">
                    }
                }
            </div>
            <!-- Tour Detail -->
            <div class="bg-light rounded p-4 mt-4">
                <h4 class="text-primary">Chi tiết Tour</h4>
                <ul class="list-unstyled">
                 
                    <li>
                        <strong>Danh sách ngày khởi hành:</strong>
                        @if (Model.NgayKhoiHanhs != null && Model.NgayKhoiHanhs.Any(x => x.NgayKhoiHanh1.Date >= DateTime.Today))
                        {
                            <ul class="list-unstyled mt-2">
                                @foreach (var item in Model.NgayKhoiHanhs
                               .Where(x => x.NgayKhoiHanh1.Date >= DateTime.Today)
                               .OrderBy(x => x.NgayKhoiHanh1))
                                {
                                    <li>
                                        <i class="bi bi-calendar-event me-1 text-primary"></i>
                                        @item.NgayKhoiHanh1.ToString("dd/MM/yyy")
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Chưa có lịch khởi hành</span>
                        }
                    </li>

               
                    <li><strong>Thời gian:</strong> @Model.ThoiGian</li>
                    <li><strong>Phương tiện:</strong> Máy bay khứ hồi + Xe du lịch</li>
                    <li><strong>Mô tả:</strong> @Model.MoTa</li>
                    <li><strong>Đã bao gồm:</strong> Vé máy bay, ăn uống, khách sạn, vé tham quan, HDV tiếng Việt</li>
                </ul>

            </div>

            <!-- Reviews -->

             <div class="mt-4">
                <h4 class="mb-3">Đánh giá khách hàng</h4>
                @if (ViewBag.DanhGias != null && ((List<VNTour.Data.DanhGium>)ViewBag.DanhGias).Count > 0)
                {
                    foreach (var dg in (List<VNTour.Data.DanhGium>)ViewBag.DanhGias)
                    {
                        <div class="border-bottom py-2">
                            <strong>@dg.HoTen</strong>
                            <span class="badge bg-success ms-2">@dg.DiemDanhGia</span>
                            <span class="float-end text-muted small">@dg.NgayTao?.ToString("dd/MM/yyyy")</span>
                            <div>@dg.NoiDung</div>
                        </div>
                    }
                }
                else
                {
                    <p>Chưa có đánh giá nào cho tour này.</p>
                }
            </div>

          

            <!-- Form Đánh Giá -->
            @if (ViewBag.CoTheDanhGia == true)
            {
                <div class="mt-5">
                    <h4 class="mb-3">Gửi đánh giá của bạn</h4>
                    <form method="post" action="/Tour/DanhGia">
                        <input type="hidden" name="IdTour" value="@Model.IdTour" />
                        <input type="hidden" name="NgayTao" value="@DateTime.Now" />
                        <div class="mb-3">
                            <label for="ten" class="form-label">Tên của bạn</label>
                            <input type="text" class="form-control" id="ten" name="HoTen" required>
                        </div>
                        <div class="mb-3">
                            <label for="diem" class="form-label">Chọn điểm đánh giá</label>
                            <select class="form-select" id="diem" name="DiemDanhGia" required>
                                <option value="">-- Chọn điểm --</option>
                                @for (int i = 10; i >= 5; i--)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="noidung" class="form-label">Nội dung đánh giá</label>
                            <textarea class="form-control" id="noidung" name="NoiDung" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-warning mt-4">
                    Bạn cần <strong>đặt tour thành công</strong> thì mới có thể gửi đánh giá.
                </div>
            }


        </div>
        <div class="col-lg-4">
            <div class="p-4 rounded shadow">
                <h5 class="mb-3 text-primary fw-bold text-uppercase">Thông tin khởi hành</h5>

                <label class="mb-2 fw-semibold">Ngày khởi hành</label>             
                <div class="d-flex flex-wrap gap-3 mb-3">
                    @if (Model.NgayKhoiHanhs != null && Model.NgayKhoiHanhs.Any())
                    {
                        @if (Model.NgayKhoiHanhs != null && Model.NgayKhoiHanhs.Any(x => x.SoChoConLai > 0))
                        {
                            @foreach (var ngay in Model.NgayKhoiHanhs
                           .Where(x => x.SoChoConLai > 0)
                           .OrderBy(x => x.NgayKhoiHanh1))
                            {
                                <div class="text-center">
                                    <button type="button"
                                            class="btn btn-outline-danger btn-sm btn-ngay"
                                            data-id="@ngay.IdNkh"
                                            onclick="chonNgay(this)">
                                        @ngay.NgayKhoiHanh1.ToString("dd/MM")
                                    </button>
                                    <div class="mt-1 text-muted small">Còn @ngay.SoChoConLai chỗ</div>
                                </div>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Chưa có lịch khởi hành</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Chưa có lịch khởi hành</span>
                    }
                </div>

                <ul class="list-group mb-3">                     
                    <li class="list-group-item bg-transparent border-0 d-flex justify-content-between">
                        <strong>Giá người lớn</strong>
                        <span>@Model.GiaNguoiLon.ToString("N0") vnđ</span>
                    </li>
                    <li class="list-group-item bg-transparent border-0 d-flex justify-content-between">
                        <strong>Giá trẻ em:</strong>
                        <span>@Model.GiaTreEm.ToString("N0") vnđ</span>
                    </li>
                </ul>                

                <form method="get" action="@Url.Action("DatTour", "DatTour")" id="formDatTour">
                    <input type="hidden" name="id" value="@Model.IdTour" />
                    <input type="hidden" name="idNgayKhoiHanh" id="idNgayKhoiHanhInput" />

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary">Đặt tour</button>
                    </div>
                </form>               
            </div>
        </div>
    </div>
</div>

<script>
    function chonNgay(button) {
        // Bỏ active khỏi tất cả các nút
        document.querySelectorAll('.btn-ngay').forEach(b => b.classList.remove('active'));

        // Thêm active cho nút được chọn
        button.classList.add('active');

        // Gán giá trị idNgayKhoiHanh vào input ẩn trong form
        const idNgay = button.getAttribute("data-id");
        document.getElementById("idNgayKhoiHanhInput").value = idNgay;
    }

    document.getElementById("formDatTour").addEventListener("submit", function (e) {
        var ngayKhoiHanhId = document.getElementById("idNgayKhoiHanhInput").value;

        if (!ngayKhoiHanhId || ngayKhoiHanhId.trim() === "") {
            e.preventDefault();
            alert("Vui lòng chọn ngày khởi hành trước khi đặt tour.");
        }
    });
</script>
